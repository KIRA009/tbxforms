{
    "name": "tbxforms",
    "version": "0.0.0",
    "author": "Kyle Bayliss",
    "private": false,
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/torchbox/tbxforms.git"
    },
    "bugs": {
        "url": "https://github.com/torchbox/tbxforms/issues"
    },
    "keywords": [
        "crispy",
        "django",
        "django crispy forms",
        "forms",
        "gds",
        "tbxforms",
        "wagtail"
    ],
    "config": {
        "src_css": "./tbxforms/static_src/sass",
        "dest_js": "./tbxforms/static_compiled/js",
        "dest_css": "./tbxforms/static_compiled/css",
        "dist": "./tbxforms/static_compiled"
    },
    "scripts": {
        "//[ Utility ]//": "",
        "clean": "rm -rf $npm_package_config_dist/*",
        "//[ Webpack build ]//": "",
        "compile:prod": "webpack --mode production",
        "compile:dev": "webpack --mode development --progress",
        "compile:watch": "npm run compile:dev -- --watch",
        "//[ Linting & formatting ]//": "",
        "lint:css": "stylelint $npm_package_config_src_css'/**/**' && stylelint --report-needless-disables $npm_package_config_src_css'/**/**'",
        "lint:js": "eslint --report-unused-disable-directives .",
        "lint:format": "prettier --check '**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
        "lint": "npm-run-all -p lint:format lint:js lint:css",
        "format": "prettier --write '**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
        "//[ Tasks ]//": "",
        "build": "npm-run-all clean compile:dev",
        "build:prod": "npm-run-all clean compile:prod",
        "start": "npm-run-all clean compile:dev -p compile:watch watch serve --silent"
    },
    "devDependencies": {
        "prettier": "^2.0.5",
        "mini-css-extract-plugin": "^2.2.0",
        "autoprefixer": "^10.3.2",
        "css-loader": "^6.2.0",
        "postcss-custom-properties": "^11.0.0",
        "postcss-loader": "^6.1.1",
        "cssnano": "^5.0.8",
        "sass": "^1.38.0",
        "sass-loader": "^12.1.0",
        "babel-loader": "^8.2.2",
        "webpack": "^5.51.1",
        "webpack-cli": "^4.8.0",
        "npm-run-all": "^4.1.5"
    }
}
